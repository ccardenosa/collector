FROM alpine:3.10

RUN apk add --no-cache --update wget ca-certificates \
    build-base gcc abuild binutils \
    bc \
    cmake \
    git \
    bash \
    elfutils-dev \
    elfutils-libelf \
    linux-headers \
    openssl-dev \
    autoconf kmod pigz clang llvm8

RUN mkdir -p /output
COPY build-kos /usr/bin/
COPY prepare-src /usr/bin

WORKDIR /scratch
ENTRYPOINT [ "/bin/bash", "-c" ]
